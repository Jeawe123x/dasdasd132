BODY		{ font-size: 10pt; font-family: Tahoma, Verdana, Arial, Helvetica; }
H1		{ font-size: 13pt; text-align: center; }
H2		{ font-size: 11pt; text-align: center; }
TD		{ font-size: 10pt; font-family: Tahoma, Verdana, Arial, Helvetica; }
TABLE		{ border-collapse: collapse; width: 100%; }
P		{ font-size: 11pt; font-family: Tahoma, Verdana, Arial, Helvetica; text-align: justify; }
